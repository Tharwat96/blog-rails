<h1>All Posts</h1>

<section class="section">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="card">
        <div class="card-content">
            <div class="card-header">
              <h4 class="title is-4"><%= link_to post.title, post %></h4>
            <div class="card-body">
              <p><%= post.content %></p>
            </div>
            <div class="comment-count">
<!--              <span class="tag is-rounded"><%# comment count %></span>-->
            </div>
              <%= link_to "Edit", edit_post_path(post.id), class: "btn btn-primary" %>
              <%= link_to "Delete", post_path(post.id), method: :delete, data: { confirm: "Confirm Delete?" }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>